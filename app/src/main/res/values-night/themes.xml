<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DisneyCharacterGuessingGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/disney_purple</item>
        <item name="colorPrimaryVariant">@color/disney_purple</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/background_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status/navigation bar -->
        <item name="android:statusBarColor">@color/disney_purple</item>
        <item name="android:navigationBarColor">@color/disney_purple</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/GameButton</item>
    </style>

    <style name="GameButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>